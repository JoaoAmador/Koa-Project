
{% extends "layout.njk" %}
{% block title %}Test VUE Page{% endblock %}
{% block header %}<h1>Hello, {{username}} from templates</h1>{% endblock %}
  
{% block content %}
  <ul>
    {% for message in messages %}
    <li>{{ loop.index }}: {{ message }}</li>
    {% endfor %}
  </ul>
  
  <hr/>
  <script src='/js/vue.js'></script>
  
  {% verbatim %}
  
  <div id="app-5">
    <p>{{ msg }}</p> <input v-model="msg"> <br/>
    <button v-on:click="reverseMessage">Reverse Message</button>
  </div>

  {% endverbatim %}

{% endblock %}

{% block footer %}
{{ super() }}
<script>
$(function(){

var app5 = new Vue({
  el: '#app-5',
  data: {
    msg: 'Hello Vue.js and {{username}}!'
  },
  methods: {
    reverseMessage: function () {
      this.msg = this.msg.split('').reverse().join('')
    }
  }
})

});
</script>
{% endblock %}
